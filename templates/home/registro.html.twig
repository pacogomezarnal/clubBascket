{% extends 'base.html.twig' %}
{% block body %}
    <div class="form_small">
    {{ form_start(form) }}
        <div>
                {{ form_errors(form) }}
        </div>
        <div class="form-group">
            {{ form_label(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_help(form.username, {'attr': {'class': 'form-text text-muted'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_help(form.plainPassword.first, {'attr': {'class': 'form-text text-muted'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_help(form.plainPassword.second, {'attr': {'class': 'form-text text-muted'}}) }}
        </div>
        {{ form_label(form.registrar) }}
    {{ form_end(form) }}
    </div>
{% endblock %}